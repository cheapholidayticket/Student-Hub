<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".ViewNotice">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_view_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/psbspeakerimages"/>

        <TextView
            android:id="@+id/activity_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date event"
            android:padding="10dp"
            android:textStyle="italic"
            android:fontFamily="@font/muli_black"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/activity_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:fontFamily="@font/muli_black"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Description"
            android:fontFamily="@font/muli_black"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


    </LinearLayout>

</RelativeLayout>