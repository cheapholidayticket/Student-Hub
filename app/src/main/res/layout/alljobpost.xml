<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    android:paddingBottom="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">


        <ImageView
            android:src="@drawable/ic_add_black_24dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/imageViewAdd_alljobpost"/>


        <TextView
            android:id="@+id/notice_title_alljobpost"
            android:layout_toRightOf="@id/imageViewAdd_alljobpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Title"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/notice_description_alljobpost"
            android:layout_below="@id/notice_date_alljobpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageViewAdd_alljobpost"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Description"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textSize="13sp"/>

            <TextView
            android:id="@+id/notice_date_alljobpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:padding="10dp"
            android:layout_toRightOf="@id/imageViewAdd_alljobpost"
            android:layout_below="@id/notice_title_alljobpost"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>