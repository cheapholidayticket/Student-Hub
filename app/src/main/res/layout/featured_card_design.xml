<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:src="@drawable/ic_add_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageViewAdd_alljobpost"/>


        <TextView
            android:id="@+id/timeAgo_alljobpost"
            android:padding="5dp"
            android:text="Date created"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notice_title_alljobpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Title"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notice_date_alljobpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="31/07/2020"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/notice_description_alljobpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Description"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"/>

        <!--        <TextView-->
        <!--            android:id="@+id/notice_campus"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:fontFamily="sans-serif"-->
        <!--            android:text="Campus"-->
        <!--            android:textColor="@color/colorAccent"-->
        <!--            android:textSize="15sp" />-->

    </LinearLayout>
</androidx.cardview.widget.CardView>