<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_margin="12sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/card1">



        <ImageView
            android:id="@+id/attractions_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/uss"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/attractions_title"
            android:layout_width="150dp"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"
            android:text="Universal Studios"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/attractions_image"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/attractions_description"
            android:layout_width="150dp"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/attractions_image"
            android:layout_below="@id/attractions_title"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>